{% extends 'base.html.twig' %}

{% block title %}Lista użytkowników{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('index') }}
{% endblock %}

{% block body %}
    <div class="bg-white shadow rounded-lg p-6">
        <div class="mb-6">
            <h2 class="text-lg font-medium text-slate-900 mb-4">Wyszukiwanie użytkowników</h2>

            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label for="search-name" class="text-sm font-medium text-slate-700">Imię i nazwisko</label>

                    <input id="search-name" type="text" class="mt-1 p-2 w-full rounded-md border-slate-300 border-1 shadow-sm focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/20"/>
                </div>

                <div>
                    <label for="search-email" class="text-sm font-medium text-slate-700">Email</label>

                    <input id="search-email" type="email" class="mt-1 p-2 w-full rounded-md border-slate-300 border-1 shadow-sm focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/20"/>
                </div>

                <div>
                    <label for="search-gender" class="text-sm font-medium text-slate-700">Płeć</label>

                    <select id="search-gender" class="mt-1 p-2.5 w-full rounded-md border-slate-300 border-1 shadow-sm focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/20">
                        <option value="">Wszystkie</option>
                        <option value="male">Mężczyzna</option>
                        <option value="female">Kobieta</option>
                    </select>
                </div>

                <div>
                    <label for="search-status" class="text-sm font-medium text-slate-700">Status</label>

                    <select id="search-status" class="mt-1 p-2.5 w-full rounded-md border-slate-300 border-1 shadow-sm focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/20">
                        <option value="">Wszystkie</option>
                        <option value="active">Aktywny</option>
                        <option value="inactive">Nieaktywny</option>
                    </select>
                </div>
            </div>

            <div class="mt-4">
                <button id="search-button" class="px-4 py-2 bg-primary text-white rounded-md hover:bg-blue-700 focus:outline-none focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-primary/40 cursor-pointer">
                    Wyszukaj
                </button>

                <button id="reset-button" class="ml-2 px-4 py-2 bg-slate-200 text-slate-700 rounded-md hover:bg-slate-300 focus:outline-none focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-slate-500/20 cursor-pointer">
                    Resetuj
                </button>
            </div>
        </div>

        <div class="mt-6">
            <h2 class="text-lg font-medium text-slate-900 mb-4">Lista użytkowników</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-slate-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">ID</th>

                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Imię i nazwisko</th>

                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Email</th>

                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Płeć</th>

                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>

                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Akcje</th>
                        </tr>
                    </thead>

                    <tbody id="users-table-body" class="bg-white divide-y divide-slate-200">
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-sm text-slate-500">
                                Ładowanie użytkowników...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="mt-4 flex justify-between items-center">
                <div>
                    <span id="pagination-info" class="text-sm text-slate-700">
                        Wyświetlanie <span id="showing-from">0</span> - <span id="showing-to">0</span> z <span id="total-users">0</span> użytkowników
                    </span>
                </div>

                <div class="flex space-x-2">
                    <button id="prev-page" class="px-3 py-1 border border-slate-300 bg-white text-sm font-medium text-slate-500 hover:bg-slate-50 disabled:opacity-50 disabled:cursor-not-allowed rounded-md cursor-pointer">
                        Poprzednia
                    </button>

                    <button id="next-page" class="px-3 py-1 border border-slate-300 bg-white text-sm font-medium text-slate-500 hover:bg-slate-50 disabled:opacity-50 disabled:cursor-not-allowed rounded-md cursor-pointer">
                        Następna
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
